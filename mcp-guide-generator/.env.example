# MCP Guide Generator Server Configuration

# Server Configuration
GUIDE_GENERATOR_LOG_LEVEL=INFO
GUIDE_GENERATOR_MAX_REQUESTS=10
GUIDE_GENERATOR_TIMEOUT=300

# Guide Generator Settings
GUIDE_GENERATOR_PATH=/usr/local/bin/guide-generator
GUIDE_GENERATOR_DEFAULT_MODEL=claude-3-haiku-20240307
GUIDE_GENERATOR_MAX_GUIDES_PER_REQUEST=50
GUIDE_GENERATOR_MAX_TOPICS_PER_REQUEST=100

# Cache Settings
GUIDE_GENERATOR_ENABLE_CACHE=true
GUIDE_GENERATOR_CACHE_DIR=/tmp/guide-generator-cache
GUIDE_GENERATOR_CACHE_TTL=3600

# Security Settings
GUIDE_GENERATOR_MAX_OUTPUT_SIZE=10485760
GUIDE_GENERATOR_VALIDATE_INPUTS=true

# AI Provider API Keys (at least one required)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here  
GOOGLE_API_KEY=your_google_api_key_here

# MCP Settings
GUIDE_GENERATOR_MCP_TIMEOUT=60
GUIDE_GENERATOR_ENABLE_NOTIFICATIONS=true
GUIDE_GENERATOR_ENABLE_LOGGING=true